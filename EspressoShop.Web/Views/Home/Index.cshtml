@{
    ViewData["Title"] = "Home Page";
}
@using Humanizer
@model System.Collections.Generic.List<EspressoShop.Web.Models.ProductViewModel>


<main role="main">
    <div>
        <h2 class="display-4">This is ADM UK Colloquium and presenting by <b>Anup Singh</b></h2>
    </div>

    <div class="jumbotron mt-4">
        <h1 class="display-4">Espresso Shop - ADM UK Colloquium</h1>
        <p class="lead">About Colloquium - Anyone can present a session related to your project, a new technology or business innovation,<br/> if you have learnt something new and excited to share with others, please click here 
                                                                                                                                         <br />to submit your nomination to conduct session. Your Contributions to UK Colloquium count towards practice contribution required by Global Objectives.</p>
    </div>

    <div>
        <div class="container">

            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="~/images/@(product.Name.ToLower()).jpg" height="225" alt="@product.Name"/>
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description.Truncate(65)</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-outline-primary" asp-route-id="@product.Id" asp-action="product" role="button">Learn More</a>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>

</main>

